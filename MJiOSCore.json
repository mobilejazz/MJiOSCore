{
  "name": "MJiOSCore",
  "version": "1.1.0",
  "summary": "Mobile Jazz iOS Core",
  "description": "Common set of reusable classes, categories and definitions for iOS.",
  "homepage": "https://bitbucket.org/mobilejazz/mjioscore",
  "license": {
    "type": "Apache License, Version 2.0",
    "file": "LICENSE"
  },
  "authors": {
    "Mobile Jazz": "info@mobilejazz.com"
  },
  "platforms": {
    "ios": "7.0"
  },
  "social_media_url": "http://twitter.com/mobilejazz",
  "source": {
    "git": "https://bitbucket.org/mobilejazz/mjioscore.git",
    "tag": "1.1.0"
  },
  "source_files": [
	  "Source Code/**/*.{h,m}"
  ],
  "frameworks": ["Foundation"],
  "requires_arc": true,
  "subspecs": [
    {
      "name": "Tools",
      "source_files": "Source Code/Tools/*.{h,m}",
      "dependencies": {
        "Cloudinary": ["~>1.0"],
        "Haneke": ["~> 1.0"]
      }
    },
    {
      "name": "ViewControllers",
      "source_files": "Source Code/View Controllers/*.{h,m}",
      "dependencies": {
        "UIImage+Additions": [],
        "UIColor+Additions": []
      }
    },
    {
      "name": "Views",
      "source_files": "Source Code/Views/*.{h,m}",
      "dependencies": {
        "UIImage+Additions": [],
        "UIColor+Additions": []
      }
    }
  ]
}
